#/bin/bash

# a tool for archiving a raycaster distribution
# including libraries, editor, examples

sScriptDir="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
sZipFile="rc.zip"
sZIP_FILE=$sScriptDir/../$sZipFile

if [ -f $sZIP_FILE ]
then
	rm $sZIP_FILE
fi
zip -rq $sZIP_FILE dynamics/ externals/ homepages/ modules/ index.html libraries/ sources/stub/ sources/mansion
